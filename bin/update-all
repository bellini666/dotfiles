#! /bin/bash

set -e

run-bootstrap
update-system

if [ -d "~/dev/sync" ]; then
  echo "* Updating forks"
  cd ~/dev/sync && \
  ./sync.sh && \
  cd - 2>/dev/null
fi

echo "* Updating zsh"
antigen cleanup
antigen update

echo "* Updating poetry"
poetry self update

echo "* Updating nvm"
ncu -g

echo "* Updating vim plugins"
vim +PlugUpgrade +qall
vim +PlugClean! +qall
vim +PlugUpdate! +qall
