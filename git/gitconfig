[user]
    name = Thiago Bellini Ribeiro
    email = thiago@bellini.dev

[fetch]
    prune = true

[core]
    editor = nvim
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes

[color]
    ui = always

[diff]
    noprefix = true

[pull]
    ff = only

# FIXME: Uncomment when git 2.34 is available
#[gpg]
#    format = ssh
#
#[gpg "ssh"]
#    defaultKeyCommand = ssh-add -L

[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    di = diff
    sdi = diff --cached
    ndi = diff --color=never
    nsdi = diff --cached --color=never
    fe = fetch --all
    rom = rebase -i origin/master
    rm-stale = "!f(){\
        git branch --color=never | grep -v "master" | grep -v ^* | xargs git branch -d;\
    }; f"
    rm-stale-force = "!f(){\
        git branch --color=never | grep -v "master" | grep -v ^* | xargs git branch -D;\
    }; f"
