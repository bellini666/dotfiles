[user]
    name = Thiago Bellini Ribeiro
    email = thiago@bellini.dev

[fetch]
    prune = true

[core]
    editor = nvim
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    true-color = always

[color]
    ui = always

[diff]
    noprefix = true
    colorMoved = default

[merge]
    conflictstyle = diff3

[pull]
    ff = only

[gpg]
    format = ssh

[gpg "ssh"]
    defaultKeyCommand = ssh-add -L
    allowedSignersFile = ~/.ssh/allowed_signers

[commit]
    gpgsign = true

[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    di = diff
    sdi = diff --cached
    ndi = diff --color=never
    nsdi = diff --cached --color=never
    fe = fetch --all
    rm-stale = "!f(){\
        git branch --color=never | grep -v "master" | grep -v ^* | xargs git branch -d;\
    }; f"
    rm-stale-force = "!f(){\
        git branch --color=never | grep -v "master" | grep -v ^* | xargs git branch -D;\
    }; f"
