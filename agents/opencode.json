{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/claude-sonnet-4.5",
  "small_model": "github-copilot/claude-haiku-4.5",
  "permission": {
    "lsp": "allow"
  },
  "provider": {
    "anthropic": {
      "options": {
        "setCacheKey": true
      }
    }
  },
  "lsp": {
    "taplo": {
      "command": ["taplo", "lsp", "stdio"],
      "extensions": [".toml"]
    },
    "marksman": {
      "command": ["marksman", "server"],
      "extensions": [".md"]
    }
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest",
        "--headless=true",
        "--isolated=true"
      ],
      "enabled": false
    }
  }
}
